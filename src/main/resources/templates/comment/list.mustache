<div class="card">
    <div class="card-header bi bi-chat-dots">
        {{#comments.size}}{{comments.size}}{{/comments.size}} Comments</div>
    <ul class="list-group-flush">
        {{#comments}}
            <li class="list-group-item">
                <span><span style="font-size: small">{{commentcontent}}</span>
                    <span style="font-size: xx-small">{{createdDate}}</span>
                    <button class="badge bi bi-pencil-square"> 수정</button>
                    <button class="badge bi bi-trash"> 삭제</button>
                </span>
                <div>{{comment}}</div>
            </li>
        {{/comments}}
    </ul>
</div>