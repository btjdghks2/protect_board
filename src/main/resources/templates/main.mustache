{{>layout/header}}

<h1>스프링 게시판</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/new" role="button" class="btn btn-primary">글 등록</a>

        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>조회수</th>

        </tr>
        </thead>
        <tbody id="tbody">
        {{#board}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/detail/{{id}}">{{title}}</a></td>
                <td>{{view}}</td>

            </tr>
        {{/board}}
        </tbody>
    </table>
</div>

{{>layout/footer}}