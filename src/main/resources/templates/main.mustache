{{>layout/header}}

<h1>스프링 게시판</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/new" role="button" class="btn btn-primary">글 등록</a>
            <a href="/best" role="button" class="btn btn-primary">인기글 게시판</a>

            <form action="/search" method="GET" class="form-inline p-2 bd-highlight" role="search">
                <input type="text" name="keyword" class="form-control" id="search" placeholder="검색">
                <button class="btn btn-success bi bi-search">검색</button>
            </form>

        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성시간</th>
            <th>조회수</th>

        </tr>
        </thead>
        <tbody id="tbody">
        {{#board}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/detail/{{id}}">{{title}}</a></td>
                <td>{{createdAt}}</td>
                <td>{{view}}</td>

            </tr>
        {{/board}}
        </tbody>
    </table>

    {{! Page }}
    <div class="pagination justify-content-center">
        {{#hasPrev}}
            <a href="?page={{previous}}" role="button" class="btn btn-lg bi bi-caret-left-square-fill"></a>
        {{/hasPrev}}
        {{^hasPrev}}
            <a href="?page={{previous}}" role="button" class="btn btn-lg bi bi-caret-left-square-fill disabled"></a>
        {{/hasPrev}}
        {{#hasNext}}
            <a href="?page={{next}}" role="button" class="btn btn-lg bi bi-caret-right-square-fill"></a>
        {{/hasNext}}
        {{^hasNext}}
            <a href="?page={{next}}" role="button" class="btn btn-lg bi bi-caret-right-square-fill disabled"></a>
        {{/hasNext}}
    </div>


</div>

{{>layout/footer}}